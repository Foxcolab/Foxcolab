enum Role {
  admin
  user
  bot
}
enum MemberRole {
  admin
  moderator
  guest
  user
  bot
}
enum Status {
  active
  inactive
}
enum Type {
  public
  private
}
enum LaterStatus {
  progress
  archived
  completed
}
enum Level {
  easy
  medium
  hard
}
